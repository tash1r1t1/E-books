<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> <!-- Ваши стили -->
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="bg-primary text-white text-center py-3">
        <h1>Book List</h1>
    </header>

    <div class="container mt-4 flex-fill">
        <% if (userId) { %>
            <p class="text-center">Welcome, user!</p>
            <div class="d-flex justify-content-center">
                <a href="/admin" class="btn btn-secondary mx-2">Admin Panel</a>
                <a href="/auth/logout" class="btn btn-danger mx-2">Logout</a>
            </div>
        <% } else { %>
            <div class="text-center mt-4">
                <a href="/auth/login" class="btn btn-primary mx-2">Login</a>
                <a href="/auth/register" class="btn btn-success mx-2">Register</a>
            </div>
        <% } %>

        <ul class="list-group mt-4">
            <% books.forEach(book => { %>
                <li class="list-group-item d-flex align-items-center">
                    <% if (book.coverUrl) { %>
                        <img src="<%= book.coverUrl %>" alt="Book Cover" class="img-thumbnail mr-3" style="max-width: 100px;">
                    <% } %>
                    <div>
                        <h5><a href="/books/<%= book.id %>"><%= book.title %></a></h5>
                        <p><strong>Author:</strong> <%= book.author %></p>
                        <p><strong>Year:</strong> <%= book.year %></p>
                        <p><strong>Description:</strong> <%= book.description %></p>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

    <footer class="bg-light text-center py-3 mt-auto">
        <p>© 2024 Book List. All rights reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
